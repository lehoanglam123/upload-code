@model IEnumerable<Kiemtracuoiky.Areas.Admin.Data.Danhmuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/Areas/Admin/Content/css/Layout.css" rel="stylesheet">
    <style></style>
</head>
<body>  
    <table class="table table-striped table-hover" style="margin-top:60px">
        <tr>
            <th>
                <b>Tên danh mục</b>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tendanhmuc)
                </td>
                <td>
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i> @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.id }) |
                    <i class="fa fa-info-circle" aria-hidden="true"></i>@Html.ActionLink("Thông tin chi tiết", "Details", new { id = item.id }) |
                    <i class="fa fa-trash" aria-hidden="true"></i>@Html.ActionLink("Xóa", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </table>
        <button class="btn btn-primary me-md-2" type="button"><a style="text-decoration:none; color: #ffffff" href="@Url.Action("Create","Danhmucs")">Thêm danh mục</a></button>
</body>
</html>
