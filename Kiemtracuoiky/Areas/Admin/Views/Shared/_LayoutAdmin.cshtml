
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/Areas/Admin/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/Layout.css" rel="stylesheet">
    <style></style>
</head>
<body>
    <div class="toolbar">
        <div class="logo"><a href="" style="text-decoration:none"><h2 style="color:#ffffff">FURNITURE</h2></a></div>
        <div style="display:inline-block; padding-left:300px; padding-bottom:20px; color:#ffffff"><b>NEW YEAR - NEW LOOK SALE - UP TO 70% OFF</b></div>
        <div style="display:inline-block; padding-left:60px "><button type="button" class="btn btn-light"><i class="fa fa-user-circle-o" aria-hidden="true"></i><b>Tài khoản</b></button></div>
    </div>
    <div class="menu">
        <div class="dropdown">
            <div class="dropbtn" style="padding-right:40px">Quản lý danh mục</div>
            <div class="dropdown-contennt">
                <a href="@Url.Action("Index","Danhmucs")">Thêm danh mục</a>
                <a href="@Url.Action("Index","Danhmucs")">Cập nhập danh mục</a>
                <a href="@Url.Action("Index","Danhmucs")">Sửa danh mục</a>
            </div>
        </div>
        <div class="dropdown">
            <div class="dropbtn" style="padding-right:40px">Quản lý sản phẩm</div>
            <div class="dropdown-contennt">
                <a href="@Url.Action("Index","Sanphams")">Thêm sản phẩm</a>
                <a href="@Url.Action("Index","Sanphams")">Cập nhập sản phẩm</a>
                <a href="@Url.Action("Index","Sanphams")">Cập nhập sản phẩm</a>
            </div>
        </div>
        <div class="dropdown">
            <div class="dropbtn" style="padding-right:40px"><a href="@Url.Action("Index","Khachhangs")" style="text-decoration:none; color:#000000">Khách hàng</a></div>
        </div>
        <div class="dropdown">
            <div class="dropbtn" style="padding-right:40px">Quản trị viên</div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FURNITURE</p>
        </footer>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>
</html>


