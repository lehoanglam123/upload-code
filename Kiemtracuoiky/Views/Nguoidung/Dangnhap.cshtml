@{ Layout = null; }
@model Kiemtracuoiky.Controllers.NguoidungController
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/Areas/Admin/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style></style>
</head>
<body>
    <div class="card" style="width:18rem; margin-left:35rem;margin-top:10rem">
        <div class="card-body">
            <table>
                @using (Html.BeginForm("Dangnhap", "Nguoidung", FormMethod.Post))
                {
                    <tr>
                        <td style="text-align:center;font-size:20px"><b>Đăng nhập</b></td>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </tr>
                    <tr>
                        <td>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Địa chỉ gmail</label>
                                <input type="email" class="form-control" id="ten" name="ten" aria-describedby="emailHelp">
                                <div id="emailHelp" class="form-text">Chúng tôi sẽ không bao giờ chia sẻ gmail cho bất kì ai.</div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" id="pass" name="pass">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </td>
                    </tr>
                }
            </table>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>
</html>
